<h1>Listing settings</h1>

<table>
  <thead>
    <tr>
      <th>Private</th>
      <th>Trakt username</th>
      <th>Trakt password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @settings.each do |setting| %>
      <tr>
        <td><%= setting.private %></td>
        <td><%= setting.trakt_username %></td>
        <td><%= setting.trakt_password %></td>
        <td><%= link_to 'Show', setting %></td>
        <td><%= link_to 'Edit', edit_user_setting_path(setting) %></td>
        <td><%= link_to 'Destroy', setting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

