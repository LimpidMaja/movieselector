<h1>Listing movies</h1>

<%= form_tag(movies_path, :method => "get", class: "navbar-form", id: "search-form") do %>
<div class="input-append">
	<%= text_field_tag :query, params[:query], class: "span2", placeholder: "Search Movies" %>
	<%= submit_tag "Search", :name => nil %>
	<% if @suggestion %>
	Did you mean: <%= link_to @suggestion, companies_path(:query => @suggestion) %>?
	<% end %>
</div>
<% end %>
<script>
	$("#query").typeahead({
	name:"movies",remote:"/movies/autocomplete?query=%QUERY"
	});
</script>

<% if @movies %>
	<% count = 0 %>
	<div style="text-align:center">
		<% @movies.each do |movie| %>
			<div style="display: inline-block">
				<%= render movie %>
			</div>
			
			<% count += 1 %>
			<% if count > 5 %>
				<br/>
				<% count = 0 %>
			<% end %>
		<% end %>
	</div>
<% end %>
<%= paginate @movies %>
<br>

<%= link_to 'New Movie', new_movie_path %>
