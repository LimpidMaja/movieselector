<h1>Listing movies</h1>

<%= form_tag(movies_path, :method => "get", class: "navbar-form", id: "search-form") do %>
<div class="input-append">
	<%= text_field_tag :query, params[:query], class: "span2", placeholder: "Search Movies" %>
	<%= submit_tag "Search", :name => nil %>
	<% if @suggestion %>
	Did you mean: <%= link_to @suggestion, companies_path(:query => @suggestion) %>?
	<% end %>
</div>
<% end %>
<script>
	$("#query").typeahead({
	name:"movies",remote:"/movies/autocomplete?query=%QUERY"
	});
</script>

<table>
  <thead>
    <tr>
      <th>Imdb</th>
      <th>Tmdb</th>
      <th>Trakt</th>
      <th>Title</th>
      <th>Year</th>
      <th>Poster</th>
      <th>Imdb rating</th>
      <th>Imdb num votes</th>
      <th>Plot</th>
      <th>Runtime</th>
      <th>Tagline</th>
      <th>Trailer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.imdb_id %></td>
        <td><%= movie.tmdb_id %></td>
        <td><%= movie.trakt_id %></td>
        <td><%= movie.title %></td>
        <td><%= movie.year %></td>
        <td><%= movie.poster %></td>
        <td><%= movie.imdb_rating %></td>
        <td><%= movie.imdb_num_votes %></td>
        <td><%= movie.plot %></td>
        <td><%= movie.runtime %></td>
        <td><%= movie.tagline %></td>
        <td><%= movie.trailer %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @movies %>
<br>

<%= link_to 'New Movie', new_movie_path %>
