<h3>Home</h3>

<%= form_tag(root_path, :method => "get", class: "navbar-form", id: "search-form") do %>
<div class="input-append">
	<%= text_field_tag :query, params[:query], class: "span2", placeholder: "Search" %>
	<%= submit_tag "Search", :name => nil %>
	<% if @suggestion %>
	Did you mean: <%= link_to @suggestion, root_path(:query => @suggestion) %>?
	<% end %>
</div>
<% end %>
<script>
	$("#query").typeahead({
	name:"movies",remote:"/autocomplete?query=%QUERY"
	});
</script>

<% if @movies %>
	<% count = 0 %>
	<div style="text-align:center">
		<% @movies.each do |movie| %>
			<% if count == 0 %>
				<div style="float: left">
					<%= render movie %>
				</div>
			<% elsif count == 1 %>
				<div style="display: inline">
					<%= render movie %>
				</div>
			<% elsif count == 2 %>
				 <div style="float: right">
					<%= render movie %>
				</div>
			<% end %>
			
			<% count += 1 %>
			<% if count > 2 %>
				<br/>
				<% count = 0 %>
			<% end %>
		<% end %>
	</div>
	<!--<% @movies.each do |movie| %>
	<p>
   		<%= movie['title'] %>: <%= movie['imdb_id'] %>
   	</p>
	<% end %>-->
<% end %>
<%= paginate @movies %>