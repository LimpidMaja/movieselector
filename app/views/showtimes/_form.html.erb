<%= simple_form_for(@showtime) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :movie_id %>
    <%= f.input :title %>
    <%= f.input :original_title %>
    <%= f.input :cinema %>
    <%= f.input :datetime %>
    <%= f.input :is_3d %>
    <%= f.input :is_synchronized %>
    <%= f.input :city %>
    <%= f.input :country %>
    <%= f.input :state %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
